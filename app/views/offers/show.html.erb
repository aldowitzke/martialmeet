<h1><%= @offer[:title] %></h1>
<p><%= @offer[:fight_model] %></p>
<p><%= @offer[:description] %></p>
<p><%= @offer[:datetime] %></p>
<p><%= @offer[:price] %></p>
<p><%= @offer.teacher.email %></p>

<% if @offer.teacher == current_user  %>
<%= link_to "Edit", edit_offer_path(@offer)  %>

<%= link_to "Delete", offer_path(@offer), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }  %>
<% end %>

<%= link_to join_offer_path, method: :patch do %>
  <i class="fas fa-sign-in-alt"></i>
<% end %>
