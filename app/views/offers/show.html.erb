<h1><%= @offer[:title] %></h1>
<p><%= @offer[:fight_model] %></p>
<p><%= @offer[:description] %></p>
<p><%= @offer[:datetime] %></p>
<p><%= @offer[:price] %></p>
<p><%= @offer[:city] %></p>
<p><%= @offer.teacher.email %></p>

<% if @offer.teacher == current_user  %>
  <%= link_to edit_offer_path(@offer) do %>
    <i class="fas fa-edit"></i>
  <% end %>
  <%= link_to destroy_specific_path(@offer), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } do %>
      <i class="fas fa-trash-alt"></i>
  <% end %>
<% end %>

<%= offer_status_icon %>

<% if @offer.student == current_user %>
  <%= link_to "Unjoin class", unjoin_offer_path(@offer, origin: 'show'), method: :patch %>
<% end %>

