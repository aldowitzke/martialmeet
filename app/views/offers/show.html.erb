<h1><%= @offer[:title] %></h1>
<p>Fight model: <%= @offer[:fight_model] %></p>
<p>Description: <%= @offer[:description] %></p>
<p>Date: <%= @offer[:datetime] %></p>
<p>Price: R$<%= @offer[:price] %></p>
<p>City: <%= @offer[:city] %></p>
<p>Teacher email: <%= @offer.teacher.email %></p>
<p>Teacher phone: <%= @offer.teacher.phone %></p>

<% if @offer.teacher == current_user  %>
  <%= link_to edit_offer_path(@offer) do %>
    <i class="fas fa-edit"></i>
  <% end %>
  <%= link_to destroy_specific_path(@offer), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } do %>
      <i class="fas fa-trash-alt"></i>
  <% end %>
<% end %>

<%= offer_status_icon %>

<% if @offer.student == current_user %>
  <%= link_to "Unjoin class", unjoin_offer_path(@offer, origin: 'show'), method: :patch %>
<% end %>

