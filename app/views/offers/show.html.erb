<h1><%= @offer[:title] %></h1>
<p><%= @offer[:fight_model] %></p>
<p><%= @offer[:description] %></p>
<p><%= @offer[:datetime] %></p>
<p><%= @offer[:price] %></p>
<p><%= @offer.teacher.email %></p>


<%= link_to "Edit", edit_offer_path(@offer)  %>


<%= link_to "Delete", offer_path(@offer), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }  %>


<% if @offer.teacher == current_user %>
   <% if @offer.student %>
      <i class="fas fa-walking"></i>
   <% else %>
      <i class="fas fa-door-open"></i>
   <% end %>
<% else %>
  <% if @offer.student %>
    <i class="fas fa-check"></i>
  <% else %>
    <%= link_to join_offer_path, method: :patch do %>
      <i class="fas fa-sign-in-alt"></i>
    <% end %>
  <% end %>
<% end %>

<% if @offer.student == current_user %>
  <%= link_to "Unjoin class", unjoin_offer_path(@offer), method: :patch %>
<% end %>

