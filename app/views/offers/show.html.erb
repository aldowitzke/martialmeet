<div class="container">
  <div class="row">
    <div class="col-xs-12 col-lg-6">
      <p><%= @offer[:datetime] %></p>
      <h1><%= @offer[:title] %></h1>
      <p><%= @offer[:fight_model] %></p>
      <p><strong>By </strong><%= @offer.teacher.name %> (<%=@offer.teacher.email%>)</p>
      <p><strong>Price  </strong>U$ <%= @offer[:price] %></p>
      <p><strong>At </strong><%= @offer[:address] %></p>
      <p><strong>Description: </strong></p>
      <p><%= @offer[:description] %></p>


      <% if @offer.teacher == current_user  %>
      <%= link_to edit_offer_path(@offer) do %>
      <i class="fas fa-edit"></i>
      <% end %>
      <%= link_to destroy_specific_path(@offer), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } do %>
      <i class="fas fa-trash-alt"></i>
      <% end %>
      <% end %>

      <%= offer_status_icon %>

      <% if @offer.student == current_user %>
      <%= link_to "Unjoin class", unjoin_offer_path(@offer, origin: 'show'), method: :patch %>
      <% end %>
    </div>
    <div class="col-xs-12 col-lg-6">
      <img src="https://picsum.photos/500">
    </div>
  </div>
</div>
