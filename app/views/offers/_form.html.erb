<%= simple_form_for(@offer) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <p>What fight model?</p>
    <%= f.select :fight_model, ['Karate', 'Jiu-jitsu', 'Kickboxing', 'Krav Maga', 'Aikido', 'Wing Chun' ] %>
    <%= f.input :description %>
    <p>What city?</p>
    <%= f.select :city, ['SÃ£o Paulo', 'Rio de Janeiro', 'Belo Horizonte', 'Curitiba'] %>
    <%= f.input :address %>
    <%= f.input :datetime, :as => :string, :input_html => { :class => 'date_picker' } %>

    <%= f.input :price %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
