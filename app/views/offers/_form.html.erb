<div class="background">
<div class="container">
  <div class="col-sm-offset-3 col-sm-6">
    <div class="row">
      <div class="text-center">
        <h2>Your class, sensei!</h2>
      </div>
      <%= simple_form_for(@offer) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :title %>
        <div class="text-center">
          <p>What fight model?</p>
          <%= f.select :fight_model, ['Aikido', 'JiuJitsu', 'Karate', 'Kickboxing', 'Krav Maga', 'Muay Thai', 'Wing Chun'] %>
          <p>What city?</p>
          <%= f.select :city, ['Aracaju', 'Belo Horizonte', 'Bélem', 'Boa Vista', 'Brasília', 'Campo Grande', 'Cuiabá', 'Curitiba', 'Florianópolis', 'Fortaleza', 'Goiânia', 'João Pessoa', 'Macapá', 'Maceió', 'Manaus', 'Natal', 'Palmas', 'Porto Alegre', 'Recife', 'Rio de Janeiro', 'Salvador', 'São Luís', 'São Paulo', 'Teresina', 'Vitória'] %>
        </div>
        <%= f.input :description %>
        <%= f.input :address %>
        <%= f.input :datetime %>
        <%= f.input :price %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
      </div>
      <div class="text-center">

        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      </div>

      <% end %>
    </div>
  </div>
</div>
</div>

