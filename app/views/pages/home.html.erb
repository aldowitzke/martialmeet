<div class="container">
  <div class="row">
      <h1 class="text-center">Find the perfect martial art class!</h1>
    <div class="col-md-offset-4 col-md-4">

      <%= form_tag offers_path, method: :get do %>

      <%= select_tag(:city, options_for_select([[], ['São Paulo', 'São Paulo'], ['Rio de Janeiro', 'Rio de Janeiro'], ['Belo Horizonte', 'Belo Horizonte'], ['Curitiba', 'Curitiba']], 'São Paulo'), class: 'form-control') %><br>

      <%= select_tag(:fight, options_for_select([[], ['Karate', 'Karate'], ['JiuJitsu', 'JiuJitsu'], ['Kickboxing', 'Kickboxing'], ['Krav Maga', 'Krav Maga'], ['Aikido', 'Aikido'], ['Wing Chun', 'Wing Chun']], 'Karate'), class: 'form-control') %><br>

      <%= submit_tag 'Pesquisar', class: 'btn btn-primary' %><br><br>

      <%= link_to "Visualizar todas as aulas", offers_path, class: 'btn btn-primary' %>

      <% end %>

    </div>
  </div>
</div>

